
@{
    ViewData["Title"] = "Product";
    var products = ViewBag.products;
}

<h1>Product</h1>
<div class="row" style="border:1px solid #cccc">
    @foreach (var item in products)
    {
        <div class="col-md-3">
            <div class="thumbnail" style="align-items:center">
                <img src="@item.Avatar" alt="" style="width:100%;  align-items:center" />
                <div class="caption">
                    <h3 class="title">@item.Name</h3>
                    <div class="price-title">
                        <p class="price" style="text-decoration: line-through;">Giá cũ:@item.Price đồng</p>
                        <p class="saleprice">Giá:@item.SalePrice đồng</p>
                    </div>
                    <p> <a asp-route="DetailPro" asp-route-id="@item.Id" class="btn btn-success btn-block"> Chi tiết</a> </p> @*asp-controller="Account" asp-action="Chi tiết"  asp-controller="Product" asp-action="Detail" *@
                </div>
            </div>
        </div>
    }
</div>
