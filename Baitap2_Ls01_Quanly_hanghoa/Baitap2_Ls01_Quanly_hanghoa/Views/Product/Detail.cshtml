
@{
    ViewData["Title"] = "Detail";
    var details = ViewBag.Details;
}

<h1>Chi tiết sản phẩm</h1>
<div class="row">
    <div class="col-md-4">
        <img src="@details.Avatar" alt="" style="width:80%"/>

    </div>
    <div class="col-md-8">
        <h2>Sản phẩm: @details.Name</h2>
        <h3 style=" text-decoration:line-through">Giá gốc: @details.Price đồng</h3>
        <h3 style="color:#fb8500;">Giá mới: @details.SalePrice đồng</h3>
        <h3 style="color:#000; font-size:16px;" >
            Mô tả:
            @details.Description</h3>
        <h3>Trạng thái:
            @if(details.Status == 1)
            {
                <span> Còn hàng</span>
            }
            else            
            {
                <span>Hết hàng</span>
            }
            </h3>
        <h3>Ngày đăng: @details.CreateAt</h3>
        <p> <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-block" style="background:red; font-size:18px;"> Về danh sách</a> </p>
    </div>
</div>

